<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      html, body { height: 100%; margin: 0; padding: 0; }
      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        color: #222;
        display: flex;
        flex-direction: column;
        background: #f8fafc;
      }
      .main-content { flex: 1; }
      .container { max-width: 900px; margin: 0 auto; padding: 0 1rem; }
      .header { margin: 2rem 0 1.5rem; }
      .header h1 { text-align: center; margin-bottom: 1rem; color: #333; }
      .role-info { text-align: center; color: #555; margin-bottom: 1rem; }
      .actions { margin-bottom: 1.5rem; text-align: center; }
      table { width: 100%; border-collapse: collapse; margin-bottom: 2rem; }
      th, td { border-bottom: 1px solid #ddd; padding: .5rem; text-align: left; }
      th { background: #fafafa; font-weight: 600; }
      .empty { text-align: center; color: #555; font-style: italic; margin-top: 1rem; }
      a.btn { display: inline-block; padding: .5rem .9rem; border: 1px solid #bbb; border-radius: .5rem; text-decoration: none; color: #222; background: #f7f7f7; }
      a.btn:hover { background: #eee; }
      .btn-primary { background: #007bff; color: white; border-color: #007bff; }
      .btn-primary:hover { background: #0056b3; }
      td:last-child, th:last-child { text-align: right; }
      .top-spacer { height: .5rem; }
    </style>
  </head>
  <body>
    <!-- NAVBAR -->
    <%- include('../partials/navbar', { role, name }) %>

    <div class="main-content">
      <div class="top-spacer"></div>

      <div class="container">
      <div class="header">
        <h1>List Kategori</h1>

        <% /* [ADD] tampilkan role pengguna bila dikirim dari controller */ %>
        <% if (typeof role !== 'undefined' && role) { %>
          <div class="role-info">
            Role: <strong><%= role %></strong>
          </div>
        <% } %>
      </div>

      <div class="actions">
        <a href="/categories/add" class="btn btn-primary">+ Tambah Kategori</a>
      </div>

      <% if (!categories || !categories.length) { %>
        <p class="empty">Belum ada kategori.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Nama Kategori</th>

              <% /* [ADD] kolom jumlah produk (hanya muncul jika ada productCount, biasanya untuk Seller) */ %>
              <% if (categories && categories.length && categories[0].dataValues && categories[0].dataValues.productCount !== undefined) { %>
                <th>Produk Saya</th>
              <% } %>

              <% /* [ADD] kolom aksi di paling kanan */ %>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach((c, i) => { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= c.name %></td>

                <% /* [ADD] tampilkan jumlah produk milik seller (jika tersedia) */ %>
                <% if (c.dataValues && c.dataValues.productCount !== undefined) { %>
                  <td><%= Number(c.dataValues.productCount) || 0 %></td>
                <% } %>

                <% /* [ADD] tombol aksi See Detail */ %>
                <td>
                  <a href="/categories/<%= c.id %>" class="btn">See Detail</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
    </div>

    <!-- FOOTER -->
    <%- include('../partials/footer') %>
  </body>
</html>
